{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "MAID Task Manifest",
    "type": "object",
    "required": ["goal", "readonlyFiles", "expectedArtifacts", "validationCommand"],
    "properties": {
      "goal": { "type": "string" },
      "taskType": {
        "type": "string",
        "enum": ["create", "edit", "refactor", "snapshot"],
        "description": "Type of task: create (new file), edit (modify existing), refactor (restructure), snapshot (consolidate history)"
      },
      "supersedes": {
        "type": "array",
        "items": { "type": "string" },
        "description": "List of manifest file paths that this manifest supersedes (replaces in validation chain)",
        "default": []
      },
      "creatableFiles": { "type": "array", "items": { "type": "string" } },
      "editableFiles": { "type": "array", "items": { "type": "string" } },
      "readonlyFiles": { "type": "array", "items": { "type": "string" } },
      "expectedArtifacts": {
        "type": "object",
        "properties": {
          "file": { "type": "string" },
          "contains": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": { "enum": ["class", "function", "attribute", "parameter"] },
                "name": { "type": "string" },
                "class": { "type": "string", "description": "The parent class for attributes or methods" },
                "bases": { "type": "array", "items": { "type": "string" }, "description": "The base classes for a class (optional)" },
                "function": { "type": "string", "description": "The parent function for parameters" },
                "parameters": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": { "type": "string" },
                      "type": { "type": "string" }
                    },
                    "required": ["name"]
                  },
                  "description": "List of parameter names for a function"
                },
                "returns": { "type": "string", "description": "The return type of a function (optional)" }
              },
              "required": ["type", "name"]
            }
          }
        },
        "required": ["file", "contains"]
      },
      "validationCommand": { "type": "array", "items": { "type": "string" } },
      "snapshotMetadata": {
        "type": "object",
        "description": "Optional metadata for snapshot manifests",
        "properties": {
          "generatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "ISO timestamp when snapshot was generated"
          },
          "generatedBy": {
            "type": "string",
            "description": "Tool or user that generated the snapshot"
          },
          "commitHash": {
            "type": "string",
            "description": "Git commit hash at time of snapshot generation"
          },
          "manifestsSuperseded": {
            "type": "integer",
            "description": "Number of manifests superseded by this snapshot"
          }
        }
      }
    }
  }